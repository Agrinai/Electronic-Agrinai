<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.nanda.newagri.Agriculture.AgricultureScreen">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="AGRICULTURE"
        android:gravity="center"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-light"
        android:background="@color/appgreen"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/blue">

        <ImageView
            android:layout_width="@dimen/margin80"
            android:layout_height="@dimen/margin80"
            android:src="@drawable/ic_clouds"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="28Â°c"
            android:textSize="30dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/white"
            android:layout_gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/margin10"
        android:layout_marginLeft="5dp">
        <android.support.v7.widget.CardView
            android:layout_width="@dimen/margin170"
            android:layout_height="@dimen/margin200"
            android:id="@+id/imageprocesscard">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center_vertical">
                <ImageView
                    android:layout_width="@dimen/margin60"
                    android:layout_height="@dimen/margin60"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_camera_alt_green_24dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin40"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center_horizontal"
                    android:text="Take picture and check Your Soil Condition"/>
            </LinearLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="@dimen/margin170"
            android:layout_height="@dimen/margin200"
            android:layout_marginLeft="@dimen/margin10"
            android:id="@+id/ecorelationCard">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center_vertical">
                <ImageView
                    android:layout_width="@dimen/margin60"
                    android:layout_height="@dimen/margin60"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_eco_black_24dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin40"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center_horizontal"
                    android:text="Ecological Relationship"/>
            </LinearLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>


</LinearLayout>
