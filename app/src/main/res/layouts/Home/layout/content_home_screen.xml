<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Home.HomeScreen"
    tools:showIn="@layout/app_bar_home_screen">

    <View
        android:layout_width="fill_parent"
        android:layout_height="180dp"
        android:background="#4caf50"
        android:id="@+id/top"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cirimg"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/userprofile"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/tv"
        android:text="NameText"
        android:fontFamily="sans-serif-light"
        android:textSize="20dp"
        android:layout_below="@+id/cirimg"
        android:layout_marginTop="17dp"
        android:textColor="#ffffff"
        android:layout_marginLeft="55dp"

        android:layout_centerHorizontal="true" />

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@id/top">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/Buy_card"
            android:layout_width="150dp"
            android:layout_height="150dp"
            card_view:cardCornerRadius="1dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"

            >
            <TextView
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:text="Buy"
                android:textSize="30dp"
                android:background="@drawable/circlebutton"
                android:textColor="#ffffff"
                android:textAlignment="center"

                android:layout_gravity="center"
                android:fontFamily="sans-serif-light"
                android:gravity="center_vertical" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/Sell_card"
            android:layout_width="150dp"
            android:layout_height="150dp"
            card_view:cardCornerRadius="1dp"

            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"

            >
            <TextView
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:text="Sell"
                android:textSize="30dp"
                android:textColor="#ffffff"
                android:textAlignment="center"
                android:background="@drawable/circlebutton"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-light"
                android:gravity="center_vertical" />
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/Transaction_card"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/circlebutton"
            card_view:cardCornerRadius="1dp"
            android:layout_below="@+id/Sell_card"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"

            >
            <TextView
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:text="Transaction History"
                android:textSize="17dp"
                android:textColor="#ffffff"
                android:textAlignment="center"
                android:background="@drawable/circlebutton"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-light"
                android:gravity="center_vertical" />
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/MyPayment_card"
            android:layout_width="150dp"
            android:layout_height="150dp"
            card_view:cardCornerRadius="1dp"
            android:layout_below="@+id/Buy_card"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"

            >
            <TextView
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:text="My  Payment"
                android:textSize="20dp"
                android:textColor="#ffffff"
                android:textAlignment="center"
                android:background="@drawable/circlebutton"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-light"
                android:gravity="center_vertical" />
        </android.support.v7.widget.CardView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/MyPayment_card"/>
      </RelativeLayout>


</ScrollView>



</RelativeLayout>
