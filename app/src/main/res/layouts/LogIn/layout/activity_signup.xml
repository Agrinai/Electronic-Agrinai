<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#4CAF50"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:id="@+id/SignupLay">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_marginTop="30dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Number"
            android:id="@+id/usertext"
            android:textColor="#ffffff"
            android:textSize="15dp"
            android:layout_margin="10dp"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="phone|textPersonName"
            android:ems="20"
            android:id="@+id/semailid"
            android:hint="PhoneNumber"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:textCursorDrawable="@drawable/editstyle"
            android:textColorHint="@drawable/txtstyle"
            android:drawablePadding="10dp"
            android:background="@drawable/underline"
            android:layout_margin="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:id="@+id/passtext"
            android:textColor="#ffffff"
            android:textSize="15dp"
            android:layout_margin="10dp"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="20"
            android:id="@+id/sname"
            android:hint="Username"
            android:textColorHint="@drawable/txtstyle"
            android:textColor="#ffffff"
            android:drawablePadding="10dp"
            android:textSize="20dp"
            android:textCursorDrawable="@drawable/editstyle"
            android:background="@drawable/underline"
            android:layout_margin="10dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Next"
            android:id="@+id/snext"
            android:background="#228b22"
            android:textColor="#ffffff"
            android:layout_margin="10dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:id="@+id/layoutOtp"
        android:padding="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your One Time Password is sent to your MobileNumber"
            android:textSize="12dp"
            android:gravity="center"
            android:layout_margin="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter your One Time password"
            android:layout_marginTop="20dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="__ __ __ __"
            android:textColorHint="@color/windowBackground"
            android:gravity="center"
            android:id="@+id/otpEditText"
            android:layout_margin="10dp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Verify"
            android:id="@+id/verifyOtp"
            android:layout_gravity="center"/>

    </LinearLayout>


        </LinearLayout>