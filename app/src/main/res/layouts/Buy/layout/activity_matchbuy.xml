<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.nanda.newagri.Buy.BuyMatchMap">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="25dp"
        android:id="@+id/title"
        android:text="Seller Details"
        android:textColor="#ffffff"
        android:gravity="center"
        android:fontFamily="sans-serif-light"
        android:background="@color/appgreen"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/notmatch"
        android:gravity="center"
        android:fontFamily="sans-serif-light"
        android:layout_centerVertical="true"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:text="Search via locality"
        android:gravity="center|left"
        android:background="@drawable/button"
        android:textColor="@color/white"
        android:drawableRight="@drawable/ic_location_on_black_24dp"
        android:drawablePadding="20dp"
        android:paddingLeft="20dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-light"
        android:id="@+id/viewnearby"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_below="@+id/viewnearby"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="match_parent" />
</RelativeLayout>
