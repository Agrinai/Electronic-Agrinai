<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nanda.newagri.Ecological">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Ecological Relationship"
            android:gravity="center"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-light"
            android:background="@color/appgreen"
            />

        <Spinner
            android:id="@+id/ecorelation"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:entries="@array/ecorelationship"
            android:spinnerMode="dialog"></Spinner>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin20">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="@dimen/margin30"
                    android:textColor="#000"
                    android:id="@+id/title"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"

                    android:layout_margin="10dp"
                    android:background="@color/gray"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/margin20"
                    android:layout_marginTop="@dimen/margin10"
                    android:id="@+id/maintext"
                    android:gravity="center"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
