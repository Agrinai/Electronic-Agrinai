<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#ffffff"
    tools:context=".Home.HomeScreen">

    <View
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#4caf50"
        android:id="@+id/top"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AGRINAI"
        android:textSize="23sp"
        android:textColor="#ffffff"
        android:fontFamily="sans-serif-light"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        style="@style/Widget.Design.TextInputLayout"
        android:id="@+id/textView4" />

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cirimg"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/top"
        android:src="@drawable/userprofile"
        android:layout_marginTop="2dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/tv"
        android:text=""
        android:fontFamily="sans-serif-light"
        android:textSize="20dp"
        android:layout_below="@+id/top"
        android:layout_marginTop="17dp"
        android:textColor="#4caf50"
        android:layout_marginLeft="55dp"

        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#4caf50"
        android:layout_below="@id/cirimg"
        android:layout_marginTop="5dp"
        android:id="@+id/view" />

    <Button
        android:layout_width="130dp"
        android:layout_height="110dp"
        android:id="@+id/bsell"
        android:textColor="#ffffff"
        android:background="@drawable/sell1"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="20dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sell"
        android:textSize="30dp"
        android:layout_below="@id/bsell"
        android:textColor="#4caf50"
        android:layout_marginLeft="55dp"
        android:fontFamily="sans-serif-light"/>
    <Button
        android:layout_width="120dp"
        android:layout_height="110dp"
        android:id="@+id/bbuy"
        android:textColor="#ffffff"
        android:layout_marginTop="150dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:background="@drawable/buy1"

       />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buy"
        android:textColor="#4caf50"
        android:fontFamily="sans-serif-light"
        android:layout_below="@id/bbuy"
        android:layout_alignParentRight="true"
        android:textSize="30dp"
        android:layout_marginRight="55dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/blogout"
        android:text="Logout"
        android:background="@drawable/button"
        android:textColor="#ffffff"
        android:layout_marginBottom="5dp"
        android:layout_alignBottom="@+id/view"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"

        />
    <Button
        android:layout_width="120dp"
        android:layout_height="110dp"
        android:id="@+id/weather"
        android:textColor="#ffffff"
        android:background="@drawable/weather1"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="20dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weather"
        android:textSize="30dp"
        android:layout_below="@id/weather"
        android:textColor="#4caf50"
        android:layout_marginLeft="30dp"
        android:fontFamily="sans-serif-light"
        android:id="@+id/textView5" />

    <Button
        android:layout_width="120dp"
        android:layout_height="110dp"
        android:id="@+id/map"
        android:textColor="#ffffff"
        android:layout_marginTop="350dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:background="@drawable/map1"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Map"
        android:textColor="#4caf50"
        android:fontFamily="sans-serif-light"
        android:layout_below="@id/map"
        android:layout_alignParentRight="true"
        android:textSize="30dp"
        android:layout_marginRight="55dp"/>


</RelativeLayout>
