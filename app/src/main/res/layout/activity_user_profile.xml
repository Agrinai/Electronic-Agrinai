<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:focusable="true"
    android:focusableInTouchMode="true"

    tools:context="com.example.nanda.newagri.UserProfile">


        <View
            android:layout_width="fill_parent"
            android:layout_height="120dp"
            android:id="@+id/view1"
            android:background="#4caf50"
            >
        </View>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/view1"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:layout_marginTop="50dp">




        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/bupdate"
            android:text="Update"
            android:textColor="#ffffff"
            android:layout_marginTop="40dp"
            android:background="@drawable/buttonpress"
            android:layout_below="@+id/edaddress"
            android:layout_centerHorizontal="true"

            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edname"
            android:layout_marginTop="30dp"
            android:background="@drawable/userprofilestyle"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:hint="  Name"
            android:textColor="#4caf50"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edmailid"
            android:background="@drawable/userprofilestyle"
            android:layout_below="@+id/edname"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"
            android:hint="  MailID"
            android:textColor="#4caf50"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edaddress"
            android:layout_below="@+id/edmailid"
            android:layout_marginTop="15dp"
            android:background="@drawable/userprofilestyle"
            android:layout_centerHorizontal="true"
            android:hint="  Address"
            android:textColor="#4caf50"/>

    </RelativeLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cirimg"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/userprofile"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>
        
